<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/topbar" android:id="@+id/topbar_container" />

    <ImageView
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ad_padding"
        android:layout_below="@+id/topbar_container"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:id="@+id/companySuggest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ad"
        android:completionThreshold="1"
        android:hint="Company Name" />
    
    <Button
        android:id="@+id/nextStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/companySuggest"
        android:onClick="nextStage"
        android:text="Next" />

    <Button
        android:id="@+id/prevStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/nextStage"
        android:onClick="prevStage"
        android:text="Back" />

   <include layout="@layout/bottombar" android:id="@+id/bottombar_container" />

    
</RelativeLayout>
